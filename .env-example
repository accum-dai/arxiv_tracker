# API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4-1106-preview

# Search Configuration
SEARCH_TOPICS=large language models,reinforcement learning,computer vision,diffusion models,consistency models
MAX_PAPERS_PER_TOPIC=30
DAYS_BACK=3
SUMMARY_LANGUAGE=zh

# File Paths
PDF_DIR=papers_pdf
DATABASE_FILE=arxiv_papers.db
OUTPUT_DIR=summaries

# Delay Settings (seconds)
MIN_API_DELAY=0.5
MAX_API_DELAY=1.0
MIN_DOWNLOAD_DELAY=1
MAX_DOWNLOAD_DELAY=3

# Email Configuration
EMAIL_ENABLED=true
EMAIL_DISPLAY_NAME=ArXiv Summary Assistant
EMAIL_SENDER=your_email@163.com
EMAIL_PASSWORD=your_authorization_code_here
EMAIL_RECEIVERS=receiver1@example.com,receiver2@example.com
SMTP_SERVER=smtp.163.com
SMTP_PORT=465